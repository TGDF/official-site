<article class="flex my-2">
  <%= render NewsThumbnailComponent.new(news: @news, size: :small_square, classes: 'w-1/6 mr-2') %>
  <div class="flex-1">
    <h2 class="mb-1 font-semibold text-lg text-red-500 hover:text-red-700"><%= link_to @news.title, @news %></h2>
    <span>
      <i class="fa fa-calendar mr-2"></i>
      <time datetime="<%= created_at.iso8601 %>"><%= l created_at, format: :short, class: 'datetime' %></time>
    </span>
  </div>
</article>
