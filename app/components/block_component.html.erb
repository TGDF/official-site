<section class="block <%= component_type %>-block">
  <div class="container mt-5 mb-4">
    <div class="col-12">
      <% if twitch_live? %>
        <iframe
          id="twitch-embed"
          class="border-0"
          src="https://player.twitch.tv/?channel=<%= strip_tags @block.content %>&parent=<%= request.host %>"
          height="480"
          width="100%"
          allowfullscreen>
        </iframe>
      <% else %>
        <%= sanitize @block.content %>
      <% end %>
    </div>
  </div>
</section>
