<article class="mx-4 p-8 border-2 border-white text-center">
  <h1 class="mb-6 text-3xl font-semibold"><%= name %></h1>
  <div class="mb-6">
    <p class="font-semibold">NTD $<%= current_price %></p>
    <p><%= t("ticket.description.#{@plan}") %></p>
  </div>
  <ul class="mb-6">
    <li><%= t("ticket.info.#{@plan}.origin_price", price: price) %></li>
    <% informations.each do |info| %>
      <li><%= info %></li>
    <% end %>
  </ul>
  <% if @site.ticket_early_bird_due_to.present? %>
    <div class="mb-6 text-sm">
      <%= t("ticket.info.#{@plan}.early_bird_price", price: early_price, date: l(@site.ticket_early_bird_due_to.to_date, format: :long)) %>
    </div>
  <% end %>
  <div>
    <%= link_to t('ticket.buy_now'), @site.ticket_buy_link, class: 'inline-block px-8 py-3 rounded-full bg-white text-red-500', target: '_blank' %>
  </div>
</article>
