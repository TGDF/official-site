<article class="flex my-4 border border-gray-300 p-6">
  <div class="mr-4 w-1/4 text-center">
    <%= link_to image_tag(logo_url(:v1)), url, target: '_blank', class: 'inline-block' %>
  </div>
  <div class="flex-1 space-y-4">
    <%= link_to url, target: '_blank', class: 'text-red-500 hover:text-red-700' do %>
      <h1 class="font-semibold text-xl"><%= name %></h1>
    <% end %>
    <%= simple_format @item.description %>
  </div>
</article>
