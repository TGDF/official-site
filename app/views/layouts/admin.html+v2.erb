<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <%= display_meta_tags site: t('site_name') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://use.fontawesome.com/b2e3e84e95.css', media: 'all' %>
    <%= stylesheet_link_tag 'theme', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbo-track': 'reload', defer: true %>
  </head>
  <body class="min-h-screen flex bg-gray-100 font-sans text-gray-900">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r">
      <%= render 'admin/shared/sidebar' %>
    </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col">
      <!-- Header -->
      <header class="h-16 bg-white border-b flex items-center px-4">
        <%= render 'admin/shared/header' %>
      </header>

      <!-- Page content -->
      <main class="flex-1 p-6 overflow-auto">
        <% flash.each do |type, msg| %>
          <div class="mb-4 px-4 py-2 rounded bg-amber-100 text-amber-800">
            <%= msg %>
          </div>
        <% end %>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
