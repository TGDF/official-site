<% title @news.title %>
<% description truncate(strip_tags(@news.content), length: 150) %>
<% set_meta_tags og: { image: { _: @news.thumbnail_url(:medium), width: 770, height: 420}, type: 'article' } %>
<% banner @news.thumbnail_url(:large) %>
<% breadcrumb :news, @news %>
<section id="news" class="container mt-8 mx-auto flex">
  <article class="basis-2/3 mr-8">
    <%= render NewsThumbnailComponent.new(news: @news) %>
    <h1 class="mt-4 font-semibold text-3xl text-red-500"><%= @news.title %></h1>
    <div class="mt-2">
      <%= sanitize @news.content %>
    </div>
  </article>
  <aside class="basis-1/3">
    <h1 class="mb-4 font-semibold text-2xl"><%= t('.latest_news') %></h1>
    <div class="flex flex-col">
    <% @latest.each do |news| %>
      <div class="flex my-2">
        <div class="w-1/5">
          <%= image_tag news.thumbnail_url(:small_square) %>
        </div>
        <div class="flex-1">
          <h2 class="mb-1 font-semibold text-lg text-red-500 hover:text-red-700"><%= link_to news.title, news %></h2>
          <span>
            <i class="fa fa-calendar mr-2"></i>
          <%= l news.created_at, format: :short %>
          </span>
        </div>
      </div>
    <% end %>
    </div>
  </aside>
</section>
