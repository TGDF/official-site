section#news.mb-5
  .container
    .sec-title.text-center.mb-4
      h1.heading = sanitize t('.heading')
    - @news.each do |news|
      article.news.mb-5.pb-5.with-border
        .row
          .col-sm-12.col-md-6.my-2
            .news__picture
              = image_tag news.thumbnail_url(:thumb)
              .news__date.text-center.py-2.px-3
                | #{news.created_at.day}
                br
                | #{news.created_at.strftime('%b')}
          .col-sm-12.col-md-6.my-2
            .news__container.mx-2
              = link_to news do
                h3.news__title = news.title
              hr.news__separator
              .news__body
                = sanitize truncate(news.content, length: 150, escape: false)
                = link_to news, class: 'news__read-more' do
                  = t('.read_more')
