<% title t('.title') %>
<% description t('.description') %>
<% breadcrumb :speakers %>
<section id="speakers">
  <header class="text-center">
    <%= render HeadingComponent.new(text: t('.speakers')) %>
  </header>
  <div class="container mx-auto">
    <div class="mx-4 lg:mx-0 lg:grid lg:grid-cols-5">
      <%= render SpeakerListItemComponent.with_collection(@speakers) %>
    </div>
  </div>
</section>
