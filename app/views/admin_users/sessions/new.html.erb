<div class="w-full max-w-md mx-auto p-6">
  <div class="bg-white border border-gray-200 rounded-md shadow-xs p-8">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6', 'data-turbo': 'false' }) do |f| %>
      <div class="text-center mb-6">
        <h1 class="text-2xl font-semibold text-gray-900 mb-2"><%= t('site_name') %></h1>
        <p class="text-gray-600 text-sm"><%= t('.hint') %></p>
      </div>

      <div class="space-y-4">
        <div class="space-y-2">
          <label for="admin_user_email" class="text-sm font-medium text-gray-900"><%= AdminUser.human_attribute_name(:email) %></label>
          <%= f.input_field :email, autofocus: true, autocomplete: 'email', placeholder: 'admin@example.com',
              class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
        </div>

        <div class="space-y-2">
          <label for="admin_user_password" class="text-sm font-medium text-gray-900"><%= AdminUser.human_attribute_name(:password) %></label>
          <%= f.input_field :password, autocomplete: 'current-password', placeholder: 'Password',
              class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
        </div>
      </div>

      <div class="pt-2">
        <%= f.submit t('.login'), class: 'w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium h-10 px-4 rounded-md cursor-pointer' %>
      </div>
    <% end %>
  </div>
</div>
