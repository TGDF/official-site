<%# Admin Agenda Days Form - TailwindCSS v2 variant %>
<%= form_with model: [:admin, @agenda_day], local: true, html: { class: 'space-y-6' } do |f| %>
  <% if @agenda_day.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
      <h2 class="font-semibold"><%= t('errors.template.header', count: @agenda_day.errors.count) %></h2>
      <ul class="mt-2 list-disc list-inside space-y-1">
        <% @agenda_day.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="space-y-4">
    <div>
      <%= f.label :label, class: 'block text-sm font-medium text-gray-900' %>
      <%= f.text_field :label, class: 'border border-gray-300 rounded-md px-4 py-2 w-full text-sm h-9 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
    <div>
      <%= f.label :date, class: 'block text-sm font-medium text-gray-900' %>
      <%= f.date_field :date, class: 'border border-gray-300 rounded-md px-4 py-2 w-full text-sm h-9 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
  </div>
  <footer class="pt-3 border-t border-gray-200 flex justify-end space-x-2">
    <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm h-9 px-4 rounded-md flex items-center justify-center' %>
    <%= link_to t('shared.cancel', default: 'Cancel'), admin_agenda_days_path, class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
  </footer>
<% end %>