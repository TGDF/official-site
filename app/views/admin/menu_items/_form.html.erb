<%# Admin Menu Items Form - TailwindCSS v2 variant %>
<%# Admin Menu Items Form - v2: scoped to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @menu_item], local: true, html: { class: 'space-y-6' } do |f| %>
    <% if @menu_item.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
        <h2 class="font-semibold"><%= t('errors.template.header', count: @menu_item.errors.count, model: @menu_item) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @menu_item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div class="space-y-2">
        <%= f.label :name, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.name_placeholder', default: 'Enter menu item name') %>
      </div>
      <div class="space-y-2">
        <%= f.label :link, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :link, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.link_placeholder', default: 'Enter URL or path') %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :visible, class: 'h-4 w-4 text-blue-600 border border-gray-300 rounded focus:ring-blue-500 focus:ring-2' %>
        <%= f.label :visible, class: 'ml-2 block text-sm font-medium text-gray-900' %>
      </div>
    </div>
    <%= f.hidden_field :menu_id, value: 'secondary' %>
    <footer class="pt-4 border-t border-gray-200 flex justify-end space-x-3">
      <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm h-9 px-4 rounded-md flex items-center justify-center' %>
      <%= link_to t('shared.cancel', default: 'Cancel'), admin_menu_items_path, class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
    </footer>
  <% end %>
<% end %>
