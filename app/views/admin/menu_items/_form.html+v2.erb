<%# Admin Menu Items Form - TailwindCSS v2 variant %>
<%# Admin Menu Items Form - v2: scoped to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @menu_item], local: true, html: { class: 'space-y-6' } do |f| %>
    <% if @menu_item.errors.any? %>
      <div class="bg-destructive/10 text-destructive rounded-md p-4">
        <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: @menu_item.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @menu_item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :name, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :name, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :link, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :link, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-primary px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :visible, class: 'h-4 w-4 text-primary border border-border rounded focus:ring-primary focus:ring-1' %>
        <%= f.label :visible, class: 'ml-2 block text-sm font-medium text-foreground' %>
      </div>
    </div>
    <%= f.hidden_field :menu_id, value: 'secondary' %>
    <div class="pt-6 flex space-x-2">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
      <%= link_to 'Cancel', admin_menu_items_path, class: 'inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/90 transition' %>
    </div>
  <% end %>
<% end %>