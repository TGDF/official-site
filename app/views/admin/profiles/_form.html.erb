<%# Admin Profile Form - TailwindCSS v2 variant %>
<%= form_with model: current_admin_user, url: admin_profile_path(current_admin_user), local: true, html: { class: 'space-y-6' } do |f| %>
  <% if current_admin_user.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
      <h2 class="font-semibold"><%= t('errors.template.header', count: current_admin_user.errors.count, model: current_admin_user) %></h2>
      <ul class="mt-2 list-disc list-inside space-y-1">
        <% current_admin_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div class="space-y-2">
      <%= f.label :password, class: 'text-sm font-medium text-gray-900' %>
      <%= f.password_field :password,
            placeholder: t('.password_placeholder', default: "Enter new password"),
            class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: 'text-sm font-medium text-gray-900' %>
      <%= f.password_field :password_confirmation,
            placeholder: t('.password_confirmation_placeholder', default: "Confirm new password"),
            class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
  </div>

  <footer class="pt-3 border-t border-gray-200 flex justify-end space-x-2">
    <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-2 rounded-md flex items-center justify-center' %>
    <%= link_to t('shared.cancel', default: 'Cancel'), admin_root_path,
          class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
  </footer>
<% end %>