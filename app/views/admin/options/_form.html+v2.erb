      <div>
        <%= f.label :streaming_track_3_url, class: 'block text-sm font-medium text-foreground' %>
        <%= f.url_field :streaming_track_3_url, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Call for Paper Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.call_for_paper') %></h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div>
        <%= f.label :cfp_only_mode, class: 'block text-sm font-medium text-foreground' %>
