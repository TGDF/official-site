<%# Admin Options Form - TailwindCSS v2 variant %>
<%= form_with model: current_site, url: admin_options_path, local: true, html: { class: 'space-y-6' } do |f| %>
  <% if current_site.errors.any? %>
    <div class="bg-destructive/10 text-destructive rounded-md p-4">
      <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: current_site.errors.count) %></h2>
      <ul class="mt-2 list-disc list-inside space-y-1">
        <% current_site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# General Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.general') %></h2>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :google_analytics_id, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :google_analytics_id, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Ticket Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.ticket') %></h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      <div>
        <%= f.label :ticket_early_personal_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_early_personal_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_personal_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_personal_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_early_group_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_early_group_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_group_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_group_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_early_student_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_early_student_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_student_price, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :ticket_student_price, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_early_bird_due_to, class: 'block text-sm font-medium text-foreground' %>
        <%= f.date_field :ticket_early_bird_due_to, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :ticket_buy_link, class: 'block text-sm font-medium text-foreground' %>
        <%= f.url_field :ticket_buy_link, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Streaming Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.streaming') %></h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div>
        <%= f.label :streaming_enabled, class: 'block text-sm font-medium text-foreground' %>
        <%= f.select :streaming_enabled, [['No', false], ['Yes', true]], {}, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
