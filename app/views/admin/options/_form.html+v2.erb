      </div>
      <div class="md:col-span-2">
        <%= f.label :cfp_form_url, class: 'block text-sm font-medium text-foreground' %>
        <%= f.url_field :cfp_form_url, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
