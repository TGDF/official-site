      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Indie Space Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.indie_space') %></h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div>
        <%= f.label :indie_space_disabled, class: 'block text-sm font-medium text-foreground' %>
        <%= f.select :indie_space_disabled, [['No', false], ['Yes', true]], {}, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :indie_space_apply_mode, class: 'block text-sm font-medium text-foreground' %>
        <%= f.select :indie_space_apply_mode, [['No', false], ['Yes', true]], {}, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div class="md:col-span-2">
        <%= f.label :indie_space_form_url, class: 'block text-sm font-medium text-foreground' %>
        <%= f.url_field :indie_space_form_url, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Night Market Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.night_market') %></h2>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :night_market_enabled, class: 'block text-sm font-medium text-foreground' %>
        <%= f.select :night_market_enabled, [['No', false], ['Yes', true]], {}, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  </div>

  <%# Survey Settings %>
  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <h2 class="text-lg font-semibold text-foreground"><%= t('.survey') %></h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div>
        <%= f.label :survey_url, class: 'block text-sm font-medium text-foreground' %>
        <%= f.url_field :survey_url, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
