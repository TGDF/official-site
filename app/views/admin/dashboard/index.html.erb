<%# Admin Dashboard Index - TailwindCSS v2 variant %>

<div class="space-y-6">
  <div class="mb-6">
    <h1 class="text-xl font-semibold text-gray-900 mb-2"><%= t('.dashboard', default: 'Dashboard') %></h1>
    <p class="text-gray-600 text-sm">
      <%= t('.welcome_message', default: 'Welcome to the admin panel. Overview of your site activity and quick access to key features.') %>
    </p>
  </div>

  <div class="bg-white border border-gray-200 rounded-md shadow-xs">
    <div class="p-6">
      <div class="mb-6">
        <h3 class="text-base font-medium text-gray-900 mb-2"><%= t('.overview', default: 'Overview') %></h3>
        <p class="text-gray-600 text-sm"><%= t('.system_status', default: 'System status and quick stats') %></p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Quick stats cards would go here -->
        <div class="text-center p-4 bg-gray-50 rounded-md">
          <div class="text-2xl font-semibold text-gray-900">--</div>
          <div class="text-sm text-gray-600"><%= t('.total_content', default: 'Total Content') %></div>
        </div>

        <div class="text-center p-4 bg-gray-50 rounded-md">
          <div class="text-2xl font-semibold text-gray-900">--</div>
          <div class="text-sm text-gray-600"><%= t('.active_users', default: 'Active Users') %></div>
        </div>

        <div class="text-center p-4 bg-gray-50 rounded-md">
          <div class="text-2xl font-semibold text-gray-900">--</div>
          <div class="text-sm text-gray-600"><%= t('.recent_updates', default: 'Recent Updates') %></div>
        </div>

        <div class="text-center p-4 bg-gray-50 rounded-md">
          <div class="text-2xl font-semibold text-gray-900">--</div>
          <div class="text-sm text-gray-600"><%= t('.system_health', default: 'System Health') %></div>
        </div>
      </div>
    </div>
  </div>
</div>