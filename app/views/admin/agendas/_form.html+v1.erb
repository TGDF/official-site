<%# CONVERTED FROM SLIM - NEEDS MANUAL ERB CONVERSION %>
- Mobility.with_locale(admin_current_resource_locale) do
  = simple_form_for [:admin, @agenda] do |f|
    = admin_box_body do
      = f.input :subject, as: :string
      = f.input :description, as: :text, input_html: { data: { editor: true }, rows: 20 }
      = f.association :speakers, input_html: { class: 'select2' }
      = f.input :language, collection: Agenda.languages.keys, include_blank: true
      = f.input :translated_language, collection: Agenda.translated_languages.keys
      = f.input :translated_type, collection: Agenda.translated_types.keys
      = f.association :room
      = f.association :time
      = f.input :begin_at
      = f.input :end_at
      = f.input :order
      = f.association :tags, input_html: { class: 'select2' }
    = admin_box_footer do
      = f.submit class: 'btn btn-primary'
