<%# Admin Indie Spaces Form - TailwindCSS v2 variant %>
<%# Admin Indie Spaces Form - TailwindCSS v2 variant: scope translations to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: current_site, url: admin_indie_space_path, local: true, html: { class: 'space-y-6' } do |f| %>
    <% if current_site.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
        <h2 class="font-semibold"><%= t('errors.template.header', count: current_site.errors.count, model: current_site) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% current_site.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="space-y-4">
      <div class="space-y-2">
        <%= f.label :indie_space_description, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_area :indie_space_description, rows: 10, data: { editor: true }, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.description_placeholder', default: 'Enter indie space description') %>
      </div>
    </div>
    <footer class="pt-4 border-t border-gray-200 flex justify-end space-x-3 mt-6">
      <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm h-9 px-4 rounded-md flex items-center justify-center' %>
    </footer>
  <% end %>
<% end %>
