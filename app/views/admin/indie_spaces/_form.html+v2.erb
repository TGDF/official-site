<%# Admin Indie Spaces Form - TailwindCSS v2 variant %>
<%# Admin Indie Spaces Form - TailwindCSS v2 variant: scope translations to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: current_site, url: admin_indie_space_path, local: true, html: { class: 'space-y-6' } do |f| %>
    <% if current_site.errors.any? %>
      <div class="bg-destructive/10 text-destructive rounded-md p-4">
        <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: current_site.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% current_site.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :indie_space_description, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_area :indie_space_description, rows: 4, data: { editor: true }, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-6 flex space-x-2">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
    </div>
  <% end %>
<% end %>