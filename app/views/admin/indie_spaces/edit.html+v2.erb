  <div class="mb-6">
    <h1 class="text-xl font-semibold text-gray-900 mb-2"><%= t('.edit') %></h1>
    <p class="text-gray-600 text-sm"><%= t('.description', default: 'Edit Indie Space settings') %></p>
  </div>

  <%= admin_v2_locale_navtab %>
  
