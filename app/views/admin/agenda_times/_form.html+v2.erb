<%# Admin Agenda Times Form - TailwindCSS v2 variant %>
<%= form_with model: [:admin, @agenda_time], local: true, html: { class: 'space-y-6' } do |f| %>
  <% if @agenda_time.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
      <h2 class="font-semibold"><%= t('errors.template.header', count: @agenda_time.errors.count, model: @agenda_time) %></h2>
      <ul class="mt-2 list-disc list-inside space-y-1">
        <% @agenda_time.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="space-y-4">
    <div>
      <%= f.label :label, class: 'block text-sm font-medium text-gray-900' %>
      <%= f.text_field :label, class: 'border border-gray-300 rounded-md px-4 py-2 w-full text-sm h-9 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
    <div>
      <%= f.label :agenda_day_id, t('.day'), class: 'block text-sm font-medium text-gray-900' %>
      <%= f.collection_select :day_id, AgendaDay.all, :id, :label, {}, class: 'border border-gray-300 rounded-md px-4 py-2 w-full text-sm h-9 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
    <div>
      <%= f.label :order, class: 'block text-sm font-medium text-gray-900' %>
      <%= f.number_field :order, class: 'border border-gray-300 rounded-md px-4 py-2 w-full text-sm h-9 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
    </div>
    <div class="flex items-center">
      <%= f.check_box :single, class: 'h-4 w-4 text-blue-600 border border-gray-300 rounded focus:ring-blue-500 focus:ring-2' %>
      <%= f.label :single, t('.single'), class: 'ml-2 text-sm font-medium text-gray-900' %>
    </div>
  </div>
  <footer class="pt-3 border-t border-gray-200 flex justify-end space-x-2">
    <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm h-9 px-4 rounded-md flex items-center justify-center' %>
    <%= link_to t('shared.cancel', default: 'Cancel'), admin_agenda_times_path, class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
  </footer>
<% end %>
