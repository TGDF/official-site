<%# CONVERTED FROM SLIM - NEEDS MANUAL ERB CONVERSION %>
= admin_page_header t('.sliders'), t('.manager_sliders')
.container-fluid
  .fade-in
    .row
      .col-md-12
        = admin_box do
          = admin_box_header title t('.sliders')
          = admin_box_body
            table.table.table-striped
              thead
                tr
                  th.table__id-column #
                  th = t('.image')
                  th = t('.language')
                  th = t('.page')
                  th = t('.actions')
              tbody
                = render @sliders
