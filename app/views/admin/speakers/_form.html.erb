<%# Admin Speakers Form - TailwindCSS v2 variant %>
<%# Admin Speakers Form - v2: scoped to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @speaker], local: true, html: { multipart: true, class: 'space-y-6' } do |f| %>
    <% if @speaker.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
        <h2 class="font-semibold"><%= t('errors.template.header', count: @speaker.errors.count, model: @speaker) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @speaker.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="space-y-4">
      <div class="space-y-2">
        <%= f.label :name, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.name_placeholder', default: 'Enter speaker name') %>
      </div>
      <div class="space-y-2">
        <%= f.label :slug, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :slug, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.slug_placeholder', default: 'Enter URL slug') %>
      </div>
      <div class="space-y-2">
        <%= f.label :title, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.title_placeholder', default: 'Enter speaker title/position') %>
      </div>
      <div class="space-y-2">
        <%= f.label :order, class: 'text-sm font-medium text-gray-900' %>
        <%= f.number_field :order, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.order_placeholder', default: 'Enter display order') %>
        <p class="text-sm text-gray-500 mt-1"><%= t('.order_help', default: 'Lower numbers appear first') %></p>
      </div>
      <div class="space-y-2">
        <%= f.label :description, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_area :description, rows: 10, data: { editor: true }, class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: t('.description_placeholder', default: 'Enter speaker biography') %>
      </div>
      <div class="space-y-2">
        <%= f.label :avatar, class: 'text-sm font-medium text-gray-900' %>
        <%= f.file_field upload_field_for(@speaker, :avatar), class: 'block w-full text-sm text-gray-900 mt-1' %>
        <% if @speaker.avatar_present? %>
          <div class="mt-2">
            <%= image_tag @speaker.avatar_url, class: 'h-16 w-auto rounded-md' %>
            <div class="flex items-center mt-2">
              <%= f.check_box :remove_avatar, class: 'h-4 w-4 text-blue-600 border border-gray-300 rounded focus:ring-blue-500 focus:ring-2' %>
              <%= f.label :remove_avatar, t('.remove_avatar', default: 'Remove avatar'), class: 'ml-2 block text-sm font-medium text-gray-900' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <footer class="pt-4 border-t border-gray-200 flex justify-end space-x-3">
      <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm h-9 px-4 rounded-md flex items-center justify-center' %>
      <%= link_to t('shared.cancel', default: 'Cancel'), admin_speakers_path, class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
    </footer>
  <% end %>
<% end %>
