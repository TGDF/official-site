<%# Admin Speakers Form - TailwindCSS v2 variant %>
<%# Admin Speakers Form - v2: scoped to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @speaker], local: true, html: { multipart: true, class: 'space-y-6' } do |f| %>
    <% if @speaker.errors.any? %>
      <div class="bg-destructive/10 text-destructive rounded-md p-4">
        <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: @speaker.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @speaker.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :name, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :name, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :slug, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :slug, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :title, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :title, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :order, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :order, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :description, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_area :description, rows: 10, data: { editor: true }, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :avatar, class: 'block text-sm font-medium text-foreground' %>
        <%= f.file_field :avatar, class: 'mt-1 block w-full text-sm text-foreground' %>
        <% if @speaker.avatar.present? %>
          <div class="mt-2">
            <%= image_tag @speaker.avatar.url, class: 'h-16 w-auto rounded-md' %>
            <div class="flex items-center mt-2">
              <%= f.check_box :remove_avatar, class: 'h-4 w-4 text-destructive border border-border rounded focus:ring-destructive focus:ring-1' %>
              <%= f.label :remove_avatar, class: 'ml-2 text-sm text-foreground' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="pt-6 flex space-x-2">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
      <%= link_to 'Cancel', admin_speakers_path, class: 'inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/90 transition' %>
    </div>
  <% end %>
<% end %>