<%# Admin News Index - TailwindCSS v2 variant %>
<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold"><%= t('.news') %></h1>
  </div>
  <div class="overflow-x-auto bg-white rounded-lg shadow">
    <table class="min-w-full divide-y divide-border">
      <thead class="bg-muted">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-medium text-muted-foreground uppercase tracking-wider">#</th>
          <th class="px-6 py-3 text-left text-sm font-medium text-muted-foreground uppercase tracking-wider"><%= t('.title') %></th>
          <th class="px-6 py-3 text-left text-sm font-medium text-muted-foreground uppercase tracking-wider"><%= t('.author') %></th>
          <th class="px-6 py-3 text-left text-sm font-medium text-muted-foreground uppercase tracking-wider"><%= t('.status') %></th>
          <th class="px-6 py-3 text-left text-sm font-medium text-muted-foreground uppercase tracking-wider"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-border">
        <%= render @news %>
      </tbody>
    </table>
  </div>
</div>