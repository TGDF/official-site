<%# Admin News Edit - TailwindCSS v2 variant %>
<div class="space-y-6">
  <div class="mb-6">
    <h1 class="text-xl font-semibold text-gray-900 mb-2"><%= t('.edit') %></h1>
    <p class="text-gray-600 text-sm"><%= t('.description', default: 'Edit news post') %></p>
  </div>

  <%= admin_v2_locale_navtab %>

  <div class="bg-white border border-gray-200 rounded-md shadow-sm overflow-hidden">
    <div class="p-6">
      <div class="mb-6">
        <h3 class="text-base font-medium text-gray-900"><%= t('.edit_news', default: 'Edit News') %></h3>
        <p class="text-gray-600 text-sm"><%= t('.edit_description', default: 'Update news content and properties') %></p>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>
