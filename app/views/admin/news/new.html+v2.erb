    <h1 class="text-xl font-semibold text-gray-900 mb-2"><%= t('.create') %></h1>
    <p class="text-gray-600 text-sm"><%= t('.description', default: 'Create a new news post') %></p>
  </div>

  <div class="bg-white border border-gray-200 rounded-md shadow-sm overflow-hidden">
    <div class="p-6">
      <div class="mb-6">
        <h3 class="text-base font-medium text-gray-900"><%= t('.create') %></h3>
        <p class="text-gray-600 text-sm"><%= t('.publish_news', default: 'Create a new news article') %></p>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>
