<%# Admin News Form - TailwindCSS v2 variant %>
<%# Admin News Form - TailwindCSS v2 variant: scope translations to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @news], local: true, html: { multipart: true, class: 'space-y-6' } do |f| %>
    <% if @news.errors.any? %>
      <div class="bg-destructive/10 text-destructive rounded-md p-4">
        <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: @news.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @news.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :title, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :title, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :slug, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :slug, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :status, class: 'block text-sm font-medium text-foreground' %>
        <%= f.select :status, [['draft','draft'], ['published','published']], {}, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :content, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_area :content, rows: 10, data: { editor: true }, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :thumbnail, class: 'block text-sm font-medium text-foreground' %>
        <%= f.file_field :thumbnail, class: 'mt-1 block w-full text-sm text-foreground' %>
      </div>
    </div>
    <div class="pt-6 flex space-x-2">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
      <%= link_to 'Cancel', admin_news_index_path, class: 'inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/90 transition' %>
    </div>
  <% end %>
<% end %>