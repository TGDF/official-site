<tr class="border-b border-gray-200">
  <td class="py-3 px-4 text-sm font-medium"><%= block.id %></td>
  <td class="py-3 px-4 text-sm"><%= strip_tags(block.content).truncate_words(10) %></td>
  <td class="py-3 px-4 text-sm text-gray-600"><%= t("locale.name.#{block.language}") %></td>
  <td class="py-3 px-4 text-sm text-gray-600"><%= t("block_types.#{block.page}") %></td>
  <td class="py-3 px-4 text-sm">
    <div class="flex items-center gap-2.5">
      <%= link_to edit_admin_block_path(block), class: 'flex items-center text-sm px-3 py-1.5 rounded-md text-gray-600 hover:bg-gray-100' do %>
        <i class="fa fa-edit w-4 h-4 mr-1"></i>
        <span><%= t('.edit') %></span>
      <% end %>
      <%= link_to admin_block_path(block), method: :delete, data: { turbo_method: :delete, confirm: t('shared.destroy_confirm') }, class: 'flex items-center text-sm px-3 py-1.5 rounded-md text-red-600 hover:bg-red-50' do %>
        <i class="fa fa-trash w-4 h-4 mr-1"></i>
        <span><%= t('.destroy') %></span>
      <% end %>
    </div>
  </td>
</tr>