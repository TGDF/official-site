<%# Admin Sites Form - TailwindCSS v2 variant: scope translations to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @site], local: true, html: { multipart: true, class: 'space-y-6' } do |f| %>
    <% if @site.errors.any? %>
      <div class="bg-red-50 text-red-600 rounded-admin-md p-4">
        <h2 class="font-semibold"><%= t('errors.template.header', count: @site.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @site.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="space-y-4">
      <div>
        <%= f.label :name, class: 'block font-semibold text-admin-text-primary' %>
        <%= f.text_field :name, class: 'border border-admin-border rounded-admin-md p-2 w-full focus:ring-1 focus:ring-admin-border-active focus:outline-none' %>
      </div>
      
      <div>
        <%= f.label :domain, class: 'block font-semibold text-admin-text-primary' %>
        <%= f.text_field :domain, class: 'border border-admin-border rounded-admin-md p-2 w-full focus:ring-1 focus:ring-admin-border-active focus:outline-none' %>
      </div>
      
      <div>
        <%= f.label :logo, class: 'block font-semibold text-admin-text-primary' %>
        <%= f.file_field :logo, class: 'mt-1 block w-full text-sm text-admin-text-primary' %>
      </div>
      
      <% if @site.new_record? %>
        <div>
          <%= f.label :tenant_name, class: 'block font-semibold text-admin-text-primary' %>
          <%= f.text_field :tenant_name, class: 'border border-admin-border rounded-admin-md p-2 w-full focus:ring-1 focus:ring-admin-border-active focus:outline-none' %>
        </div>
      <% end %>
      
      <div>
        <%= f.label :description, class: 'block font-semibold text-admin-text-primary' %>
        <%= f.text_area :description,
              rows: 4,
              data: { editor: true },
              class: 'border border-admin-border rounded-admin-md p-2 w-full focus:ring-1 focus:ring-admin-border-active focus:outline-none' %>
      </div>
      
      <div>
        <%= f.label :figure, class: 'block font-semibold text-admin-text-primary' %>
        <%= f.file_field :figure, class: 'mt-1 block w-full text-sm text-admin-text-primary' %>
      </div>
    </div>
    
    <footer class="pt-3 border-t border-admin-border flex justify-end space-x-2">
      <%= f.submit class: 'bg-admin-primary text-white rounded-admin-md h-10 px-4 shadow-admin-sm hover:bg-admin-primary-hover focus:outline-none focus:ring-2 focus:ring-admin-border-active' %>
      <%= link_to t('shared.cancel', default: 'Cancel'), admin_sites_path, class: 'bg-admin-background-muted text-admin-text-primary rounded-admin-md h-10 px-4 shadow-admin-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-admin-border-active inline-flex items-center justify-center' %>
    </footer>
  <% end %>
<% end %>
