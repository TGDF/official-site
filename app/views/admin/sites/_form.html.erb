<%# Admin Sites Form - TailwindCSS v2 variant: scope translations to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @site], local: true, html: { multipart: true, class: 'space-y-6' } do |f| %>
    <% if @site.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-600 rounded-lg p-6">
        <h2 class="font-semibold"><%= t('errors.template.header', count: @site.errors.count, model: @site) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @site.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <div class="space-y-2">
        <%= f.label :name, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :name, placeholder: "Site name", class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
      </div>

      <div class="space-y-2">
        <%= f.label :domain, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_field :domain, placeholder: "example.com", class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
      </div>

      <div class="space-y-2">
        <%= f.label :logo, class: 'text-sm font-medium text-gray-900' %>
        <%= f.file_field :logo, class: 'mt-1 block w-full text-sm text-gray-900' %>
      </div>

      <% if @site.new_record? %>
        <div class="space-y-2">
          <%= f.label :tenant_name, class: 'text-sm font-medium text-gray-900' %>
          <%= f.text_field :tenant_name, placeholder: "Tenant identifier", class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :description, class: 'text-sm font-medium text-gray-900' %>
        <%= f.text_area :description,
              rows: 4,
              placeholder: "Site description",
              data: { editor: true },
              class: 'w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
      </div>

      <div class="space-y-2">
        <%= f.label :figure, class: 'text-sm font-medium text-gray-900' %>
        <%= f.file_field :figure, class: 'mt-1 block w-full text-sm text-gray-900' %>
      </div>
    </div>

    <footer class="pt-3 border-t border-gray-200 flex justify-end space-x-2">
      <%= f.submit class: 'bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-2 rounded-md flex items-center justify-center' %>
      <%= link_to t('shared.cancel', default: 'Cancel'), admin_sites_path, class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50' %>
    </footer>
  <% end %>
<% end %>
