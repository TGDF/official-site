<%# Admin Sites Index - TailwindCSS v2 variant %>
<div class="space-y-6">
  <header class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900 mb-2"><%= t('.sites') %></h1>
    <p class="text-gray-600"><%= t('.description', default: 'Manage all sites in the system') %></p>
  </header>
  
  <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
    <table class="w-full border-collapse text-sm text-gray-900">
      <thead>
        <tr class="border-b border-gray-200 font-semibold">
          <th class="text-left py-2 px-4">#</th>
          <th class="text-left py-2 px-4"><%= t('.name') %></th>
          <th class="text-left py-2 px-4"><%= t('.domain') %></th>
          <th class="text-left py-2 px-4"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @sites %>
      </tbody>
    </table>
  </div>
</div>
