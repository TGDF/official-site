<%# Admin Sites Index - TailwindCSS v2 variant %>
<div class="space-y-6">

  <div class="bg-white border border-gray-200 rounded-md shadow-sm overflow-hidden">
    <div class="p-6">
      <div class="mb-6">
        <h3 class="text-base font-medium text-gray-900"><%= t('.sites') %></h3>
        <p class="text-gray-600 text-sm"><%= t('.manage_sites', default: 'View and manage all sites') %></p>
      </div>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">#</th>
            <th class="text-left py-3 px-4 text-sm font-medium text-gray-500"><%= t('.name') %></th>
            <th class="text-left py-3 px-4 text-sm font-medium text-gray-500"><%= t('.domain') %></th>
            <th class="w-24 py-3 px-4 text-sm font-medium text-gray-500"><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @sites %>
        </tbody>
      </table>
    </div>
  </div>
</div>
