<%# Admin Sites Index - TailwindCSS v2 variant %>
<div class="space-y-6">
  <header class="mb-6">
    <h1 class="text-lg font-bold text-admin-text-primary"><%= t('.sites') %></h1>
    <p class="text-sm text-admin-text-secondary mt-1"><%= t('.description', default: 'Manage all sites in the system') %></p>
  </header>
  
  <div class="bg-admin-background rounded-admin-md shadow-admin-sm border border-admin-border overflow-hidden">
    <table class="w-full border-collapse text-sm text-admin-text-primary">
      <thead>
        <tr class="border-b border-admin-border font-semibold">
          <th class="text-left py-2 px-4">#</th>
          <th class="text-left py-2 px-4"><%= t('.name') %></th>
          <th class="text-left py-2 px-4"><%= t('.domain') %></th>
          <th class="text-left py-2 px-4"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @sites %>
      </tbody>
    </table>
  </div>
</div>
