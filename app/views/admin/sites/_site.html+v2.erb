<tr class="border-b border-admin-border">
  <td class="py-2 px-4"><%= site.id %></td>
  <td class="py-2 px-4 font-semibold"><%= site.name %></td>
  <td class="py-2 px-4 text-admin-text-link hover:underline">
    <%= link_to site.domain, root_url(host: site.domain), target: '_blank' %>
  </td>
  <td class="py-2 px-4 space-x-2">
    <%= link_to t('.edit'), edit_admin_site_path(site), class: "bg-admin-primary text-white rounded-admin-md py-1 px-3 shadow-admin-sm hover:bg-admin-primary-hover" %>
    <%= button_to t('.destroy'), admin_site_path(site), method: :delete, data: { confirm: t('shared.destroy_confirm'), turbo_method: :delete }, class: "bg-red-600 text-white rounded-admin-md py-1 px-3 shadow-admin-sm hover:bg-red-700" %>
  </td>
</tr>
