<tr class="border-b border-gray-200">
  <td class="py-2 px-4"><%= site.id %></td>
  <td class="py-2 px-4 font-semibold"><%= site.name %></td>
  <td class="py-2 px-4 text-blue-600 hover:underline">
    <%= link_to site.domain, root_url(host: site.domain), target: '_blank' %>
  </td>
  <td class="py-2 px-4 flex items-center space-x-2">
    <%= link_to t('.edit'), edit_admin_site_path(site), class: "bg-blue-600 text-white rounded-lg py-1 px-3 shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= button_to t('.destroy'), admin_site_path(site), method: :delete, data: { confirm: t('shared.destroy_confirm'), turbo_method: :delete }, class: "bg-red-600 text-white rounded-lg py-1 px-3 shadow hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </td>
</tr>
