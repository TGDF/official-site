<%# Admin Plans Form - TailwindCSS v2 variant %>
<%# Admin Plans Form - Tailwind v2: scoped to selected locale %>
<% Mobility.with_locale(admin_current_resource_locale) do %>
  <%= form_with model: [:admin, @plan], local: true, html: { class: 'space-y-6' } do |f| %>
    <% if @plan.errors.any? %>
      <div class="bg-destructive/10 text-destructive rounded-md p-4">
        <h2 class="text-destructive font-semibold"><%= t('errors.template.header', count: @plan.errors.count) %></h2>
        <ul class="mt-2 list-disc list-inside space-y-1">
          <% @plan.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= f.label :name, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :name, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :content, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_area :content, rows: 10, data: { editor: true }, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :button_label, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :button_label, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :button_target, class: 'block text-sm font-medium text-foreground' %>
        <%= f.text_field :button_target, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-primary px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
      <div>
        <%= f.label :order, class: 'block text-sm font-medium text-foreground' %>
        <%= f.number_field :order, class: 'mt-1 block w-full border border-border rounded-md bg-input-background text-foreground px-3 py-2 focus:border-primary focus:ring-primary focus:ring-1' %>
      </div>
    </div>
    <div class="pt-6 flex space-x-2">
      <%= f.submit class: 'inline-flex items-center px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-md hover:bg-primary/90 transition' %>
      <%= link_to 'Cancel', admin_plans_path, class: 'inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/90 transition' %>
    </div>
  <% end %>
<% end %>