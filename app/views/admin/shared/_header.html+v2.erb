<!-- TailwindCSS-based header for v2 admin -->
<div class="flex items-center justify-between w-full">
  <!-- Site switcher dropdown -->
  <div class="relative group">
    <button type="button" class="flex items-center px-3 py-2 text-gray-700 hover:bg-gray-100 rounded">
      <span><%= current_site.name %></span>
      <svg class="ml-1 w-4 h-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
    <div class="hidden group-hover:block absolute right-0 mt-2 w-56 bg-white border rounded shadow-lg z-50">
      <div class="px-4 py-2 text-xs font-semibold text-gray-500 bg-gray-100"><%= t('.all_sites') %></div>
      <%= link_to t('site_name'), admin_root_url(host: Settings.site.default_domain), class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
      <% @navbar_sites.each do |site| %>
        <%= link_to site.name, admin_root_url(host: site.domain), class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
      <% end %>
      <div class="border-t my-1"></div>
      <%= link_to t('.view_all'), admin_sites_url(host: Settings.site.default_domain), class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
    </div>
  </div>

  <!-- User menu dropdown -->
  <div class="relative group">
    <button type="button" class="flex items-center">
      <%= image_tag current_admin_user.avatar(size: 36), class: 'w-8 h-8 rounded-full' %>
    </button>
    <div class="hidden group-hover:block absolute right-0 mt-2 w-48 bg-white border rounded shadow-lg z-50">
      <div class="px-4 py-2 text-xs font-semibold text-gray-500 bg-gray-100"><%= t('.account') %></div>
      <%= link_to t('.logout'), destroy_admin_user_session_path, method: :delete, class: 'block px-4 py-2 text-red-600 hover:bg-red-100' %>
    </div>
  </div>
</div>