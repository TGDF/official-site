<!-- Admin v2 Header Navigation -->
<header class="bg-white border-b border-gray-200 h-16 flex items-center px-6">
  <div class="flex items-center justify-between w-full">
    <div class="flex items-center gap-4">
      <!-- Left Side -->
    </div>
    <!-- Right Side Actions -->
    <div class="flex items-center gap-3">
      <!-- Avatar -->
      <% if current_admin_user.avatar.present? %>
        <div class="w-8 h-8 rounded-full overflow-hidden">
          <%= image_tag current_admin_user.avatar(size: 32), alt: "User avatar", class: "w-full h-full object-cover" %>
        </div>
      <% else %>
        <div class="w-8 h-8 bg-gray-400 rounded-full"></div>
      <% end %>
    </div>
  </div>
</header>
